{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "arrow-parens": "off",
    "no-unused-vars": "off",
    "func-names": "off",
    "no-plusplus": "off",
    "no-restricted-globals": "off",
    "no-underscore-dangle": "off",
    "import/no-cycle": "off"
  },
  "ignorePatterns": [
    "dist/",
    "build/",
    "docs/"
  ]
}